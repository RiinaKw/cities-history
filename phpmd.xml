<?xml version="1.0"?>
<ruleset name="FrontierLinkWorks PHPMD rule set"
        xmlns="http://pmd.sf.net/ruleset/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
            http://pmd.sf.net/ruleset_xml_schema.xsd"
        xsi:noNamespaceSchemaLocation="
            http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>FrontierLink Works custom rule set</description>

    <rule ref="rulesets/codesize.xml" />

    <rule ref="rulesets/controversial.xml">
        <!-- 変数やプロパティはキャメルケースにしない -->
        <exclude name="CamelCaseVariableName" />
        <exclude name="CamelCaseParameterName" />
        <exclude name="CamelCasePropertyName" />
        <exclude name="CamelCaseMethodName" />

		<!-- Fuel 特有の「クラス名がスネークケース」を無視する -->
        <exclude name="CamelCaseClassName" />
    </rule>

    <rule ref="rulesets/design.xml" />

    <rule ref="rulesets/unusedcode.xml" />

    <rule ref="rulesets/naming.xml">
        <exclude name="ShortVariable" />
        <exclude name="ShortMethodName" />
        <exclude name="ShortClassName" />

		<!-- マイグレーションにありがちな長いクラス名を無視する -->
        <exclude name="LongClassName" />
    </rule>
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <!-- 1文字の変数名を許容する -->
            <property name="minimum" value="1" />
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/ShortMethodName">
        <properties>
            <!-- 2文字のメソッド名を許容する -->
            <property name="minimum" value="2" />
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/ShortClassName">
        <properties>
            <!-- 2文字のクラス名を許容する -->
            <property name="minimum" value="2" />
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/LongClassName">
        <properties>
            <!-- 50文字のクラス名を許容する -->
            <property name="maximum" value="50" />
        </properties>
    </rule>

    <rule ref="rulesets/unusedcode.xml" />
</ruleset>
